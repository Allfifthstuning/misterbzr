# Description: dynamic window manager statusbar
# URL:         https://dwm.suckless.org/
# Maintainer:  Hans Bezemer, hbezemer at kliksafe dot nl
# Depends on:  dwm

name=dwmstatus
version=1
release=1
source=()
git=git://git.suckless.org/${name}

build () {
    git clone $git $name
    cd ${name}
    patch -p0 < $PKGMK_ROOT/dwmstatus.patch

    make CC=gcc X11INC=/usr/include
    make DESTDIR=$PKG PREFIX=/usr install
}
