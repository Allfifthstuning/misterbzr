name=zita-resampler
version=1.6.2
release=1
source=(https://kokkinizita.linuxaudio.org/linuxaudio/downloads/$name-$version.tar.bz2)

build() {
  cd $name-$version/source
#  sed -e '/native/d' \
#      -e 's/ldconfig/& -N $(DESTDIR)\/$(LIBDIR)/' \
#      -i Makefile
  make
  make SUFFIX="" PREFIX=/usr DESTDIR=$PKG install
}
